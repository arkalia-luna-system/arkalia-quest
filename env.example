# Configuration d'Arkalia Quest
# Copiez ce fichier vers .env et modifiez les valeurs selon votre environnement

# Configuration du serveur
HOST=0.0.0.0
PORT=5001
DEBUG=False

# Configuration de la base de données
DATABASE_URL=sqlite:///data/database/arkalia.db

# Configuration de la sécurité
SECRET_KEY=change-this-secret-key-in-production
SESSION_COOKIE_SECURE=False

# Configuration des logs
LOG_LEVEL=INFO

# Configuration de l'IA LUNA
LUNA_LEARNING_RATE=0.1
LUNA_MEMORY_SIZE=1000
LUNA_EMOTION_THRESHOLD=0.5

# Configuration de la gamification
POINTS_PER_ACTION=10
LEVEL_MULTIPLIER=1.5
BADGE_UNLOCK_THRESHOLD=100

# Configuration des tests
TEST_TIMEOUT=30
TEST_COVERAGE_THRESHOLD=80.0

# Configuration du déploiement
DEPLOYMENT_ENV=development
ENABLE_METRICS=False
METRICS_PORT=9090

# Configuration externe (optionnel)
# REDIS_URL=redis://localhost:6379
# SENTRY_DSN=https://your-sentry-dsn
# GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
